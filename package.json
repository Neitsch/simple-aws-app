{
  "name": "simple-aws-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run assemble && npm run test",
    "start": "node server/index.js",
    "test": "mocha --compilers js:babel-core/register",
    "assemble": "webpack",
    "lint": "npm run lint-browser && npm run lint-server",
    "lint-browser": "eslint app/**/* -c .eslintrc.browser.json",
    "lint-server": "eslint server/**/* -c .eslintrc.server.json",
    "commit": "commit-wizard"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neitsch/simple-aws-app/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "express": "^4.13.4",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chai": "^3.5.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-airbnb-es5": "^1.0.9",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.1.1",
    "eslint-plugin-standard": "^1.3.2",
    "mocha": "^2.4.5",
    "pre-git": "^3.8.4",
    "supertest": "^1.2.0"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": ["npm run lint"],
      "pre-push": ["npm run test"],
      "post-commit": ["git status"],
      "post-checkout": ["npm install"],
      "post-merge": ["npm install"]
    }
  }
}
